import java.util.*;

class HelloWorld {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int m=0;
        String s=sc.next();
        String t="";
        for(int i=0;i<s.length();i++){
            if(s.charAt(i)>='a' && s.charAt(i)<='z'){
                t+=s.charAt(i);
                m++;   
            }
        }
        System.out.println(t);
        System.out.println(m);
        sc.close();
    }
}
